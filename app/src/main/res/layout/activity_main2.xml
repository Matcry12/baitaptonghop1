<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/back2"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_23" />

        <Button
            android:layout_marginLeft="40dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_baseline_archive_2234346"
            />
        <Button
            android:layout_width="76dp"
            android:layout_height="60dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            />

        <Button
            android:layout_width="76dp"
            android:layout_height="60dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_baseline_local_post_office_24" />

        <Button
            android:layout_width="76dp"
            android:layout_height="60dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_baseline_more_vert_24" />
    </LinearLayout>
    <TextView
        android:id="@+id/sub2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empty"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <FrameLayout
            android:measureAllChildren="true"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_circle_24"
                />
            <TextView
                android:id="@+id/avt"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/ten"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Empty"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/email"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Empty"
                android:textSize="13sp"
                />
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/ce2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empty"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
</LinearLayout>